<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:theme="@style/MyTheme4"
              android:background="#330006">

    <LinearLayout
        android:id="@+id/song_play"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical"
        android:background="#DBF9F4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_marginLeft="140dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/backward"
                android:id="@+id/backward"
               />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/play"
                android:layout_marginLeft="20dp"
                android:id="@+id/play_pause"
                />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/forward"
                android:layout_marginLeft="20dp"
                android:background="@drawable/forward"
              />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_song"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11.5"
        android:background="#515b3a" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="Synopsis"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/synopsis"/>

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffff"
                android:text="This  is  something  somthing  This  is  something  somthing  This  is  something  somthing  This  is  something  somthing  This  is  something  somthing  This  is  something  somthing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#5F7367"
        android:layout_height="40dp">

        <TextView
            android:text="Artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/artist_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="#2F394D"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:layout_marginRight="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="45dp"
                    android:id="@+id/singer1"
                    />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/singer2"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginStart="31dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="PEHLA NAAM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist_name1"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:text="DOOSRA NAAM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist_name2"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="105dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>